/* pages/album/album.wxss */
.albumInfo{
    margin-top: 10px;
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.cover{
    border-radius: 5px;
    width: 300rpx;
    height: 300rpx;
}
.info{
    width: 55%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.info .name{
    font: 18px;
    font-weight: bold;
}
.info .arter{
    font-size: 14px;
}
.info .intro{
    height: 50%;
    font-size: 12px;
    color: gray;
}