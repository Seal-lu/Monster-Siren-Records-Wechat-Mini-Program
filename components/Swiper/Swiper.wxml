<!--components/Swiper/Swiper.wxml-->
<swiper class="swiper"
    autoplay="true" 
    duration="500" 
    easing-function="easeInOutCubic"
    >
    <block wx:for="{{swiperItem}}" wx:key="id">
        <swiper-item>
            <image lazy-load="true" src="https://images.weserv.nl/?url={{item.coverUrl}}" mode="scaleToFill"></image>
        </swiper-item>
    </block>
</swiper>
